<h1> Build your own bike </h1>

<% if @bike.errors.any? %>
<h3>ERROR</h3>
<ul>    
<% @bike.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
<% end %>
</ul>
<% end %>
<%= form_for @bike do |b| %>
    <p>
        <%= b.label :brand %> <br/>
        <%= b.text_field :brand %>
    </p>
    
    <p>
    <%= b.label :wheels %> <br/>
    <%= b.text_field :wheels %>
</p>

<p>
<%= b.label :color %> <br/>
<%= b.text_field :color %>
</p>

<p>
<%= b.label :year_of_production %> <br/>
<%= b.text_field :year_of_production %>
</p>

    <%= b.submit %>

<% end %>

<%= link_to "Back", bikes_path %>